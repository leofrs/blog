<h1>Redefinir Senha</h1>

<%= form_with(model: @user, url: password_reset_path(@user.reset_password_token), method: :patch) do |f| %>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>

  <%= f.submit "Redefinir Senha" %>
<% end %>