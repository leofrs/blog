<div class="field">
  <h1>Formulario</h1>
  <%= form_for user do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "erro") %> impediram este usuário de ser salvo:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :nome_usúario %>
    <%= f.text_field :name_user %>
  </div>

  <div class="actions">
    <%= f.submit 'Salvar' %>
  </div>
<% end %>

  </div>