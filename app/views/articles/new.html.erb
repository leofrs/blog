<h1>New Article</h1>


<%= form_with model: @article do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %><br>
    <% @article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="field">
      <%= form.label :tag_list, 'Tags' %>
      <%= form.text_field :tag_list, placeholder: 'Digite suas tags separadas por vÃ­rgula' %>
  </div>
  
  <div>
    <%= form.submit "Postar" %>
  </div>
<% end %>
